<section id="newUser">

  <header class="page-header">
    <h1 style="color: green">Create Your Account!</h1>
  </header>
  <div>
    <%= form_for :user, url: '/users' do |f| %>

      <p><%= f.text_field :first_name, placeholder: "First Name"%></p>
      <p><%= f.text_field :last_name, placeholder: "Last Name"%></p>
      <p><%= f.text_field :email, placeholder: "Email"%></p>
      <p><%= f.password_field :password, placeholder: "Your Password"%></p>
      <p><%= f.password_field :password_confirmation, placeholder: "Confirm Password" %></p>

      <div style="float: center" id="newUser">
        <p><%= f.submit "Let's Roll!", class: "btn btn-success" %></p>
      </div>
    <% end %>
  </div>
</section>